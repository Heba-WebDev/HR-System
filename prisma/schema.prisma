generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Employees {
  id            String   @id @default(uuid())
  name          String
  phone_number  String   @unique
  email         String   @unique
  born_date     String
  nationality   String
  national_id   String
  department    String
  job_title     String
  start_date    DateTime
  contract_type String
}

